{% macro content(spec) %}

{% set spec = spec or {} %}
{% set _videoUrl = spec.videoUrl or '' %}

<div class="heroBanner">
  <div class="heroBanner__wrapper">
    <video autoplay muted loop width="100%" height="100%">

      <source src="{{ _videoUrl }}"
              type="video/mp4">

      Sorry, your browser doesn't support embedded videos.
    </video>
  </div>
</div>
{% endmacro %}
